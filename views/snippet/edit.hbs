{{>flash}}

<h1>Edit snippet</h1>

<form action="/snippet/edit/{{id}}" method="post">
    <div class="form-group">
        <label>Title</label>
        <input  required="true" type="text" name="snippetTitle" class="form-control" placeholder="Enter title" value="{{title}}">
    </div>

    <div class="form-group">
        <label>Snippet text</label>
        <textarea required="true" name="snippetBody" class="form-control" rows="20">{{body}}</textarea>
    </div>

    <div class="form-group">
        <label>Tags</label>
        <input type="text" name="snippetTags" class="form-control" placeholder="Enter tags (ex. HTML, Java, C++)" value="{{tags}}">
    </div>

    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <button type="submit" class="btn btn-success">Save</button>
</form>