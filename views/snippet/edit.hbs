{{>flash}}

<h1>Edit snippet</h1>

<form action="/snippet/edit/{{id}}" method="post">
    <div class="form-group">
        <label>Snippet title</label>
        <input type="text" name="snippetTitle" class="form-control" placeholder="Enter title" value="{{title}}">
    </div>

    <div class="form-group">
        <label>Snippet text</label>
        <textarea name="snippetBody" class="form-control">{{body}}</textarea>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>