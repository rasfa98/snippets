{{>flash}}

<h1>Create a new snippet</h1>

<form action="/snippet/create" method="post">
    <div class="form-group">
        <label>Title</label>
        <input required="true" type="text" name="snippetTitle" class="form-control" placeholder="Enter title">
    </div>

    <div class="form-group">
        <label>Snippet text</label>
        <textarea required="true" name="snippetBody" class="form-control" rows="12"></textarea>
    </div>

    <div class="form-group">
        <label>Tags</label>
        <input type="text" name="snippetTags" class="form-control" placeholder="Enter tags (HTML, Java, C++)">
    </div>

    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <button type="submit" class="btn btn-primary">Create</button>
</form>