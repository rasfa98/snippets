{{>flash}}

<h1>Login</h1>

<form action="/login" method="post">
    <div class="form-group">
        <label>UserID</label>
        <input required="true" type="text" name="userID" class="form-control" placeholder="Enter userID">
    </div>

      <div class="form-group">
        <label>Password</label>
        <input required="true" type="password" name="password" class="form-control" placeholder="Enter password">
    </div>

    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <button type="submit" class="btn btn-primary">Login</button>
    <a class="btn btn-link" href="/register">Create account</a>
</form>