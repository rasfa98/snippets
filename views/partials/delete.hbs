{{#if delete}}
<div class="flash alert alert-{{delete.type}}">{{delete.text}}
    <form action="/snippet/delete/{{delete.id}}" method="post">
    <button type="submit" class="btn btn-success btn-sm">Yes</button>
    <a class="btn btn-danger btn-sm" href="/manage">No</a>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>
</div>
{{/if}}