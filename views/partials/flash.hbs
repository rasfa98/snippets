{{#if flash}}
{{#if flash.modal}}
<div class="flash alert alert-{{flash.type}}">{{flash.text}}
    <form action="/snippet/delete/{{flash.id}}" method="post">
    <button type="submit" class="btn btn-success btn-sm">Yes</button>
    <a class="btn btn-danger btn-sm" href="/manage">No</a>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>
</div>
{{else}}
<div class="flash alert alert-{{flash.type}}">{{flash.text}}</div>
{{/if}}
{{/if}}